@model IEnumerable<IngredientDB.Ingredient>


@{
    ViewBag.Title = "Index";
}

<h2>Ingrediënten</h2>

<p1> Zoek ingrediënt:</p1>
<form method="post">
    <input type="text" name="input" />
    <input type="submit" value="Zoek" />

</form>

<p>
    @Html.ActionLink("Maak nieuw Ingrediënt", "Create")
</p>
<table class="table">
    <tr>
        <th>
            naam
        </th>
        <th>
            @Html.DisplayNameFor(model => model.merk)
        </th>
        <th></th>
    </tr>

    @{
        if (Model != null)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.merk)
                    </td>
                    <td>
                        @Html.ActionLink("Verander", "Edit", new { id = item.ingredientID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ingredientID }) |
                        @Html.ActionLink("Verwijder", "Delete", new { id = item.ingredientID })
                    </td>
                </tr>
            }
        }
    }

</table>

